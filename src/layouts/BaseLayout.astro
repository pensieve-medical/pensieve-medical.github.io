---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import WhatsappModal from '../components/WhatsappModal.astro';

const {
  title,
  description,
  ogTitle,
  ogDescription,
  ogUrl,
  ogImage = 'https://docco.in/og-image.png',
  twitterTitle,
  twitterDescription,
  twitterImage,
  pageClass = '',
  showBack = false,
  showWhatsappModal = false,
} = Astro.props;

const resolvedOgTitle = ogTitle ?? title;
const resolvedOgDescription = ogDescription ?? description;
const resolvedOgUrl = ogUrl ?? 'https://docco.in';
const resolvedTwitterTitle = twitterTitle ?? resolvedOgTitle;
const resolvedTwitterDescription = twitterDescription ?? resolvedOgDescription;
const resolvedTwitterImage = twitterImage ?? ogImage;
---
<!doctype html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="color-scheme" content="light dark" />
  <meta name="msapplication-TileColor" content="#0b1120" />
  <meta name="msapplication-navbutton-color" content="#0b1120" />
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta name="theme-color" content="#0b1120" media="(prefers-color-scheme: dark)" />
  <meta name="theme-color" content="#f8fafc" media="(prefers-color-scheme: light)" />
  <meta name="theme-color" content="#0b1120" id="theme-color-dynamic" />
  <script is:inline>
    (() => {
      const themeMeta = document.getElementById('theme-color-dynamic');
      if (!themeMeta || !window.matchMedia) {
        return;
      }
      const darkColor = '#0b1120';
      const lightColor = '#f8fafc';
      const media = window.matchMedia('(prefers-color-scheme: dark)');
      const applyTheme = () => {
        themeMeta.setAttribute('content', media.matches ? darkColor : lightColor);
      };
      applyTheme();
      if (media.addEventListener) {
        media.addEventListener('change', applyTheme);
      } else if (media.addListener) {
        media.addListener(applyTheme);
      }
    })();
  </script>
  <meta property="og:type" content="website" />
  <meta property="og:site_name" content="docco" />
  <meta property="og:title" content={resolvedOgTitle} />
  <meta property="og:description" content={resolvedOgDescription} />
  <meta property="og:url" content={resolvedOgUrl} />
  <meta property="og:image" content={ogImage} />
  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="630" />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={resolvedTwitterTitle} />
  <meta name="twitter:description" content={resolvedTwitterDescription} />
  <meta name="twitter:image" content={resolvedTwitterImage} />
  <link rel="icon" href="/favicon-light.svg" media="(prefers-color-scheme: light)" />
  <link rel="icon" href="/favicon-dark.svg" media="(prefers-color-scheme: dark)" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Caveat:wght@500;600&family=Lato:wght@400;500;600;700&family=Playfair+Display:wght@600;700&family=Zen+Dots&display=swap"
    rel="stylesheet" />
  <link rel="stylesheet" href="/styles.css" />
  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-243QZZYTD1"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-243QZZYTD1');
  </script>
</head>

<body>
  <div class={`page ${pageClass}`.trim()}>
    <div class="orb one"></div>
    <div class="orb pink two"></div>
    <div class="orb three"></div>
    <Header showBack={showBack} />
    <main>
      <slot />
    </main>
    {showWhatsappModal && <WhatsappModal />}
    <Footer />
  </div>
</body>

</html>
